{   
    "tabWidth": 2,
    "printWidth": 80,
    "parser": "babylon",
    "semi": true,
    "trailingComma": "none",
    "singleQuote": false,
    "jsxBracketSameLine": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "src/**/*.tsx",
            "options": {
                "semi": true,
                "singleQuote": false,
            }
        },
        {
            "files": "src/**/*.js",
            "options": {
                "semi": true,
                "singleQuote": false,
            }
        },
        {
            "files": "src/**/*.test.tsx",
            "options": {
                "semi": true
            }
        },
        {
            "files": "src/**/*.scss",
            "options": {
                "parser": "scss",
                "semi": true
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "markdown",
                "printWidth": 80,
                "proseWrap": "always",
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        }
    ]
}